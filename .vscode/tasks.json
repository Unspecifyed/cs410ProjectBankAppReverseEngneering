{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Google Test from source",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd /usr/src/gtest && sudo rm -rf CMakeFiles CMakeCache.txt && sudo cmake -DCMAKE_CXX_COMPILER=clang++ . && sudo make"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "build Program",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "${workspaceFolder}/main.cpp",  // Build the main program with main.cpp
                "${workspaceFolder}/*.cpp",     // Include all other cpp files
                "-o",
                "${workspaceFolder}/output",
                "-I",
                "${workspaceFolder}",
                "-I",
                "/usr/include/jsoncpp",
                "-I",
                "/usr/src/gtest/include",  // Include Google Test headers
                "-L",
                "/usr/src/gtest/lib",      // Link Google Test libraries
                "-lgtest",
                "-lgtest_main",
                "-lpthread",
                "-lssl",
                "-lcrypto",
                "-ljsoncpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "build Test",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "clang++ -std=c++17 -g ${workspaceFolder}/test/test.cpp ${workspaceFolder}/bank.cpp ${workspaceFolder}/client.cpp -o ${workspaceFolder}/test/test_output -I ${workspaceFolder} -I /usr/include/jsoncpp -I /usr/src/gtest/include -L /usr/src/gtest/lib -lgtest -lgtest_main -lpthread -lssl -lcrypto -ljsoncpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "run Test",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "${workspaceFolder}/test/test_output"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "build and run all",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "clang++ -std=c++17 -g ${workspaceFolder}/test/test.cpp ${workspaceFolder}/bank.cpp ${workspaceFolder}/client.cpp -o ${workspaceFolder}/test/test_output -I ${workspaceFolder} -I /usr/include/jsoncpp -I /usr/src/gtest/include -L /usr/src/gtest/lib -lgtest -lgtest_main -lpthread -lssl -lcrypto -ljsoncpp && ${workspaceFolder}/test/test_output"
            ],
            "group": {
                "kind": "test",
                "isDefault": true  // Default task to build program, build test, and run test
            }
        }
    ]
}
